<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h2>Add a new sight reading challenge</h2>
  <%= simple_form_for @sightread do |f| %>
    <%= f.input :title %>
    <%= f.input :tempo %>
    <%= f.input :key %>
    <%= f.input :time %>
    <%= f.input :notes, as: :text %>
    <br />
    <%= f.submit 'Update', :class => 'btn btn-primary' %>
    <br />
  <% end %>
  <br />
</div>